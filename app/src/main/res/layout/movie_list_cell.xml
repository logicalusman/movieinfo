<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/grid_1x"
    android:layout_marginBottom="@dimen/grid_1x"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/movie_poster_iv"
        android:layout_width="92dp"
        android:layout_height="92dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_title_tv"
        style="@style/MovieListTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/grid_1x"
        android:layout_marginStart="@dimen/grid_1x"
        app:layout_constraintLeft_toRightOf="@id/movie_poster_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/movie_poster_iv"
        tools:text="Gone by the wind." />

    <TextView
        android:id="@+id/release_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_1x"
        android:text="@string/release_date"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/movie_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/movie_title_tv" />

    <TextView
        android:id="@+id/movie_release_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/movie_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/release_date_tv"
        tools:text="2018-08-09" />

</android.support.constraint.ConstraintLayout>
