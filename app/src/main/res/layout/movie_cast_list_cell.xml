<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/grid_0.5x"
    android:layout_marginTop="@dimen/grid_0.5x">

    <ImageView
        android:id="@+id/movie_cast_profile_picture_iv"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_cast_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/grid_0.5x"
        android:layout_marginStart="@dimen/grid_0.5x"
        app:layout_constraintLeft_toRightOf="@+id/movie_cast_profile_picture_iv"
        app:layout_constraintTop_toTopOf="@+id/movie_cast_profile_picture_iv"
        tools:text="Brad Pitt" />

</android.support.constraint.ConstraintLayout>
